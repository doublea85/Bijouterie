{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | Back Office | Gestion des catégories{% endblock %}

{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}

    {% include "flashes/index.html.twig" %}

    
    <a class="btn btn-success mt-3" href="{{ path('app_admin_categorie_new') }}">Ajouter</a>

    <div class="col-md-6 mx-auto">
        <table class="table table-striped table-hover table table-borderless text-center mt-3">
            <thead class="bg-danger text-white">
                <tr class="align-middle">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
            {% set quantity = categorie.produits|length %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                  
                    <td>
                        <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">
                            <i class="text-info" data-feather="edit"></i>
                        </a>
                    </td>
                    <td>
                        {{ include('admin_categorie/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    

{% endblock %}
